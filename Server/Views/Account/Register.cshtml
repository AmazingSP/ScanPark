@model Server.Models.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <title>Sign In | Bootstrap Based Admin Template - Material Design</title>
        <!-- Favicon-->
        <link rel="icon" href="../../favicon.ico" type="image/x-icon">

        <!-- Bootstrap Core Css -->
        <link href="~/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

        <!-- Animation Css -->
        <link href="~/plugins/animate-css/animate.css" rel="stylesheet" />

        <!-- Custom Css -->
        <link href="~/css/style.css" rel="stylesheet">

        <!-- Theme -->
        <link href="~/css/themes/theme-blue-grey.css" rel="stylesheet" />

        <!-- Jquery Core Js -->
        <script src="~/plugins/jquery/jquery.min.js"></script>
    </head>
    <body class="login-page">
        <div class="login-box">
            <div class="logo msg">
                <img class="brand-logo" src="~/images/ScanParkLogoBlack.png" />
            </div>
            <!-- Registrierung -->
            <div class="card">
                <div class="body">
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="msg">Registrieren Sie ein neues Konto</div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">person</i>
                            </span>
                            <div class="form-line">
                                <input type="text" class="form-control" asp-for="FullName" placeholder="Nachname, Vorname" required autofocus>
                            </div>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">email</i>
                            </span>
                            <div class="form-line">
                                <input type="email" class="form-control" asp-for="Email" placeholder="E-Mail Adreses" required>
                            </div>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">lock</i>
                            </span>
                            <div class="form-line">
                                <input type="password" class="form-control" asp-for="Password" minlength="6" placeholder="Kennwort" required>
                            </div>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">lock</i>
                            </span>
                            <div class="form-line">
                                <input type="password" class="form-control" asp-for="ConfirmPassword" minlength="6" placeholder="Kennwort (wiederholen)" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="terms" id="terms" class="filled-in chk-col-blue-grey" required>
                            <label for="terms">Ich habe die <a href="javascript:void(0);">AGBs</a> gelesen und verstanden.</label>
                        </div>

                        <button class="btn btn-block btn-lg bg-blue-grey waves-effect" type="submit">Jetzt registrieren</button>
                        <div asp-validation-summary="All"></div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Bootstrap Core Js -->
        <script src="~/plugins/bootstrap/js/bootstrap.js"></script>

        <!-- Validation Plugin Js -->
        <script src="~/plugins/jquery-validation/jquery.validate.js"></script>

        <!-- Custom Js -->
        <script src="~/js/admin.js"></script>
        <script src="~/js/pages/sign-in.js"></script>
    </body>
</html>